


import java.util.Scanner;
public class Main

{
    public static void hp(){
        Scanner scan=new Scanner(System.in);
        System.out.println("name:hp");
        System.out.println("procsser:i5");
        System.out.println("Ram:8gp");
        System.out.println("ssd:525");
        System.out.println("amount:5000");
        
        System.out.println("1 purches: 2 exit");
        int ad=scan.nextInt();
        if(ad==1){
             int aa=5000;
             double s=aa%0.52;
              System.out.println("GST : "+ s);
        
            System.out.println("pay Your Amount");
             System.out.println("Total amount  :"+(aa+s));
             double f=aa+s;
             
              double aaa=scan.nextDouble();
                 
         
            if(f==aaa){
            
            System.out.println("done purches");
            }
           
        else{
             System.out.println("thanks for visiting");
        }
    }
    }

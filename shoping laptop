	public static void main(String[] args) {
	    Scanner scan=new Scanner(System.in);
		System.out.println("1 hp: 2 dell: 3 asus:");
		int a=scan.nextInt();
		switch(a){
		    case 1:{
		        hp();
		      break;
		    }
		    case 2:{
		            dell();
		            break;
		    }
		     case 3:{
		            asus();
		            break;
		     }
		      default:{
		       System.out.print("miss maching");
		                  }
		            }
		        }
		    
	
	}
		
		
		
	
